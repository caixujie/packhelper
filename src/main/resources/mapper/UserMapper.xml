<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pres.swegnhan.packhelper.infrastructure.userrepository.UserRepository">

    <insert id="insert">
        insert into tb_user(mac, ip, name, level1, level2, level3)
        values (
        #{user.mac},
        #{user.ip},
        #{user.name},
        #{user.level1},
        #{user.level2},
        #{user.level3})
    </insert>

    <insert id="insertPackSupsRelation">
        insert into rel_pack_sups(pack_uid, sups_uid)
        values (
        #{packId},
        #{supsId})
    </insert>

    <select id="findIdByWhere"
            parameterType="java.lang.String"
            resultType="java.lang.String">
        select
        id
        from tb_user
        where level3 in
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
        #{item}
        </foreach>
    </select>


</mapper>